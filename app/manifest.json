{
    "name": "Bitmessage Chrome",
    "description": "Bitmessage Chrome App",
    "version": "14",
    "manifest_version": 2,
    "sockets": {
        "tcp": {
          "connect": "*:*"
        },
        "tcpServer": {
          "listen": "*:*"
        }
    },
    "permissions": [
        {
            "socket": [
                "tcp-listen:*:*",
                "tcp-connect:*:*"
            ]
        },
        "app.window",
        {
            "fileSystem": [
                "write",
                "retainEntries",
                "directory"
            ]
        },
        "storage",
        "unlimitedStorage"
    ],
    "icons": {
//        "16": "images/icon-16.png",
//        "128": "images/icon-128.png"
    },
    "app": {
        "background": {
            "scripts": [
                "scripts/main.js"
            ]
        }
    }
}
